{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id":
    "https://raw.githubusercontent.com/Ouest-France/platform/master/packages/schemas/BlockConfig.json",
  "type": "object",
  "title": "BlockConfig",
  "description":
    "Le BlockConfig permet de spécifier au CMS les Blocks à exposer au niveau du PageBuilder.",
  "required": ["name", "type", "labels", "configurations"],
  "properties": {
    "name": {
      "$ref": "defs.json#/definitions/BlockName"
    },
    "type": {
      "$ref": "defs.json#/definitions/BlockType"
    },
    "labels": {
      "$ref": "defs.json#/definitions/Labels"
    },
    "configurations": {
      "type": "array",
      "minItems": 1,
      "maxItems": 10,
      "title": "Configurations possible du Block",
      "description":
        "Cela définit ce qui est nécessaire pour le rendering du Block par le CMS. A tout moment il ne peut y avoir plus de `maxItems` configurations simultanément disponible pour un Block.",
      "items": {
        "type": "object",
        "required": ["version", "endpoint"],
        "properties": {
          "version": {
            "$ref": "defs.json#/definitions/BasicSemVer"
          },
          "endpoint": {
            "type": "object",
            "required": ["url", "method", "pure", "parameters", "ui"],
            "properties": {
              "url": {
                "type": "string",
                "title": "The Url Schema.",
                "description":
                  "An explanation about the purpose of this instance.",
                "default": "",
                "examples": ["String"]
              },
              "method": {
                "type": "string",
                "title": "The Method Schema.",
                "description":
                  "Note : pour le moment uniquement GET est supporté",
                "default": "",
                "enum": ["GET"],
                "examples": ["GET"]
              },
              "pure": {
                "type": "boolean",
                "title": "Block pureness",
                "description":
                  "An explanation about the purpose of this instance.",
                "default": false,
                "examples": ["true", "false"]
              },
              "parameters": {
                "type": "array",
                "title":
                  "The parameters needed to send a valid HTTP Block call.",
                "description":
                  "Relies on OpenAPI v2.0 because v3.0 is missing official JSON Schema (https://github.com/OAI/OpenAPI-Specification/pull/1236)",
                "items": {
                  "$ref":
                    "http://swagger.io/v2/schema.json#/definitions/parameter"
                }
              },
              "ui": {
                "type": "array",
                "items": {
                  "type": "string",
                  "title": "The 0 Schema.",
                  "description":
                    "An explanation about the purpose of this instance.",
                  "default": "",
                  "examples": ["json-schema-ui"]
                }
              }
            }
          },
          "templates": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["name", "labels", "engine", "source"],
              "properties": {
                "name": {
                  "type": "string",
                  "title": "Theme name",
                  "description":
                    "Theme name, so users will be able to differentiate them from the PageBuilder",
                  "examples": ["default", "christmas"]
                },
                "labels": {
                  "$ref": "defs.json#/definitions/Labels"
                },
                "engine": {
                  "type": "string",
                  "title": "Template engine",
                  "description":
                    "The template engine to use to render this Block. *twig* is deprecated, always use 'mustache' instead, see: https://mustache.github.io",
                  "enum": ["twig", "mustache"]
                },
                "source": {
                  "type": "string",
                  "title": "The Source Schema.",
                  "description":
                    "An explanation about the purpose of this instance.",
                  "default": "",
                  "examples": ["String"]
                },
                "assets": {
                  "type": "object",
                  "properties": {
                    "js": {
                      "type": "array",
                      "items": {
                        "title": "Empty Object",
                        "description":
                          "This accepts anything, as long as it's valid JSON."
                      }
                    },
                    "css": {
                      "type": "array",
                      "items": {
                        "title": "Empty Object",
                        "description":
                          "This accepts anything, as long as it's valid JSON."
                      }
                    },
                    "fonts": {
                      "type": "array",
                      "items": {
                        "title": "Empty Object",
                        "description":
                          "This accepts anything, as long as it's valid JSON."
                      }
                    },
                    "images": {
                      "type": "array",
                      "items": {
                        "title": "Empty Object",
                        "description":
                          "This accepts anything, as long as it's valid JSON."
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "external": {
      "type": "object",
      "required": ["parameters", "ui"],
      "properties": {
        "parameters": {
          "type": "array",
          "items": {
            "type": "string",
            "title": "The 0 Schema.",
            "description": "An explanation about the purpose of this instance.",
            "default": "",
            "examples": [
              "see OpenAPI Parameters / JSON Schema Specification Wright Draft 00 (aka Draft 5)"
            ]
          }
        },
        "ui": {
          "type": "array",
          "items": {
            "type": "string",
            "title": "The 0 Schema.",
            "description": "An explanation about the purpose of this instance.",
            "default": "",
            "examples": ["json-schema-ui"]
          }
        },
        "headers": {
          "type": "array",
          "items": {
            "type": "string",
            "title": "The 0 Schema.",
            "description": "An explanation about the purpose of this instance.",
            "default": "",
            "examples": ["String"]
          }
        },
        "head": {
          "type": "object",
          "properties": {
            "links": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "rel": {
                    "type": "string",
                    "title": "The Rel Schema.",
                    "description":
                      "An explanation about the purpose of this instance.",
                    "default": "",
                    "examples": ["String"]
                  }
                }
              }
            },
            "meta": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "title": "The Name Schema.",
                    "description":
                      "An explanation about the purpose of this instance.",
                    "default": "",
                    "examples": ["String"]
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
